@model Studentmanagement.Core.Models.StudentMarkmodel
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
<!DOCTYPE html>
<html>
<head>
    <title>
        Student Information adding
    </title>
</head>
<body>
    <h1>Student Marks</h1>
    <div>@Html.ActionLink("Marklist-Page", "markpost", "Home", new { }, new { @class = "btn-info p-1" })</div>
    <div class="mt-2">@Html.ActionLink("Back-to-Dashboard", "Display", "Home", new { }, new { @class = "btn-info p-1" })</div>
    <div id="studentadd">
        @using (Html.BeginForm("Marksupdate", "Home", FormMethod.Post))
        {@Html.DisplayName("Name");<br>
        @Html.DropDownList("Name", new SelectList(Model.Namelist, "studentID", "Studentname"))<br>
        @Html.DisplayName("Mark1");<br>
        @Html.TextBoxFor(m => m.mark1);<br>
        @Html.DisplayName("Mark2");<br>
        @Html.TextBoxFor(m => m.mark2);<br>
        <button type="submit" onclick="SubmitDetails()" class="btn-success">SAVE</button>
    }

    </div>
</body>

</html>
