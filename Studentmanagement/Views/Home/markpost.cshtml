@model IEnumerable<Studentmanagement.Core.Models.StudentMarkmodel>
<!DOCTYPE html>
<html>
<head>
    <title>
        Display Mark
    </title>
</head>
<body>
    <div>

        <table>
            <tr>
                @*<td>StudentID</td>*@
                <td>Name</td>
                <td>Mark1</td>
                <td>Mark2</td>
                <td>Total</td>
                <td>Action</td>
            </tr>
            @foreach (var ist in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(modelist => ist.studentId)</td>*@
                    <td>@Html.DisplayFor(modelist => ist.Namestring)</td>
                    <td>@Html.DisplayFor(modelist => ist.mark1)</td>
                    <td>@Html.DisplayFor(modelist => ist.mark2)</td>
                    <td>@Html.DisplayFor(modelist => ist.total)</td>
                    <td>@Html.DisplayFor(modelist=>ist.studentId)</td>
                    <td>@Html.ActionLink("Delete","Deletemark", "Home", new { id = ist.studentId }, new { onclick = "return confirm('Are you want to Delete');" })</td>
                    @*<td>  @Html.ActionLink("Addmarks", "AddMarks", "Home")</td>*@
                </tr>
            }
        </table>
    </div>
</body>
</html>
